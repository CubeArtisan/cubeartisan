{
  "name": "@cubeartisan/server",
  "version": "0.1.0",
  "main": "app.js",
  "type": "module",
  "license": "AGPL-3.0-only",
  "scripts": {
    "start": "yarn nodemon",
    "build": "yarn build:base --mode production --config webpack.prod.cjs",
    "build:base": "export NODE_OPTIONS=--max_old_space_size=16000 && webpack --progress",
    "build:dev": "yarn build:base --mode development --config webpack.dev.cjs",
    "cards": "node --max-old-space-size=4096 force_update.cjs",
    "lint": "eslint --quiet `yarn --silent list-files`",
    "lint:loud": "eslint `yarn --silent list-files`",
    "lint:fix": "eslint --fix `yarn --silent list-files`",
    "list-files": "git ls-files '*.js' '*.cjs' '*.mjs'",
    "nodemon": "nodemon -x 'node --experimental-loader @node-loader/babel routes/index.js' --ignore public --ignore private --ignore __tests__ -w ../client/dist -w ./",
    "run-daily-jobs": "sh server/jobs/definition/daily.sh",
    "run-weekly-jobs": "sh server/jobs/definition/weekly.sh",
    "run-monthly-jobs": "sh server/jobs/definition/monthly.sh",
    "run-continuous-jobs": "sh server/jobs/definition/continuous.sh",
    "test": "yarn test:loud --silent",
    "test:loud": "jest --detectOpenHandles  --coverage",
    "test:watch": "yarn test:loud --watch --verbose false"
  },
